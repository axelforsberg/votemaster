<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >

    <Button
        android:id="@+id/btn_create"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="140dp"
        android:text="@string/start_btn_create"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_actives"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/btn_create"
        android:layout_below="@+id/btn_create"
        android:layout_marginTop="50dp"
        android:text="@string/start_btn_actives"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/btn_actives"
        android:layout_below="@+id/btn_actives"
        android:layout_marginTop="50dp"
        android:text="@string/start_btn_settings"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="156dp"
        android:layout_toLeftOf="@+id/btn_create"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_settings"
        android:layout_below="@+id/btn_settings"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/imageView1"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="40sp" />

</RelativeLayout>
