<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="VoteName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_name"
        android:layout_below="@+id/details_name"
        android:text="description"
        android:textSize="30sp" />

    <Button
        android:id="@+id/details_btn_delete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/details_btn_result"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="Tabort" />

    <Button
        android:id="@+id/details_btn_open"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/details_btn_delete"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:text="Ã–ppna" />

    <Button
        android:id="@+id/details_btn_result"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/details_description"
        android:layout_alignLeft="@+id/details_btn_delete"
        android:text="Visa Resultat" />

    <ListView
        android:id="@+id/list_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/details_btn_open"
        android:layout_alignLeft="@+id/details_description"
        android:layout_below="@+id/details_description"
        android:layout_margin="20dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@+id/details_btn_delete" >

    </ListView>

</RelativeLayout>